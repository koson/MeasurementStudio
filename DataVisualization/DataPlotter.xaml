<UserControl x:Class="DataVisualization.DataPlotter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             mc:Ignorable="d" d:DesignWidth="482.707" d:DataContext="{d:DesignData /SampleData/VisualizationViewModelSampleData.xaml}">
    <Grid>
        <d3:ChartPlotter Name="ChartControl">
			<d3:Header Name="Header" Content="{Binding HeaderLabel}"/>
            <d3:VerticalAxisTitle Name="VerticalAxisLabel" Content="{Binding VertivalAxisLabel}"/>
            <d3:HorizontalAxisTitle Name="HorizontalAxisLabel" Content="{Binding HorizontalAxisLabel}" />
			
        </d3:ChartPlotter>
        
    </Grid>
</UserControl>
