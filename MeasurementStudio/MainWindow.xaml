<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:IV="clr-namespace:IVCharacterization;assembly=IVCharacterization"
        xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:local="clr-namespace:MeasurementStudio"
        x:Class="MeasurementStudio.MainWindow"
        Title="MainWindow" Height="600.904" Width="745.331">
    <Window.DataContext>
        <local:MainViewModel x:Name="viewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="546*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <oxy:PlotView Model="{Binding MyModel}" Margin="0,0,0.2,0" Height="546" VerticalAlignment="Top"/>
        <Button Content="Button" Grid.Row="1" Click="Button_Click_1"/>

    </Grid>
</Window>
