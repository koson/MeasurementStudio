<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Helper.DataInputControl"
	x:Name="UserControl"
	d:DesignWidth="597.944" d:DesignHeight="39.696" BorderBrush="#FFA4A4A4">

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20*"/>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="78*"/>
		</Grid.ColumnDefinitions>
		<Label x:Name="InputValueNameLabel" Content="{Binding InputName, ElementName=UserControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
		<Path Grid.Column="1" Data="M237,10 L237,436.01252" Fill="#FFF4F4F5" Stretch="Fill" Stroke="Black" StrokeThickness="4" Margin="0,5"/>
		<TextBox Grid.Column="2" TextWrapping="Wrap" Text="{Binding InputValue, ElementName=UserControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
	</Grid>
</UserControl>