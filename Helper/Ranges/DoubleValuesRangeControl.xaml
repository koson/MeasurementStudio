                </Binding>
            </TextBox.Text>
        </TextBox>
        <Label Content="Points number" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Style="{DynamicResource InputTextBoxStyle}">
            <TextBox.Text>
                <Binding Path="RangePointsCount" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
