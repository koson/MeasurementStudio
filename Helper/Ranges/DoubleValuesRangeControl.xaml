            <ComboBoxItem Content="Repetitive"/>
            <ComboBoxItem Content="BackAndForth"/>
            <ComboBox.SelectedValue>
                <Binding Path="CountingMode" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.Converter>
