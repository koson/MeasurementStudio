<Window x:Class="Helper.NewExperimentWindow.NewExperimentControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewExperiment" Height="300" Width="300"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" Margin="5" FocusManager.FocusedElement="{Binding ElementName=ExpName}">
        <TextBlock Text="Enter your experiment name" HorizontalAlignment="Center" Margin="0,10" FontSize="20"/>
        <TextBox x:Name="ExpName" HorizontalContentAlignment="Center" Margin="5"/>
        <Button Content="OK" Click="Button_Click" HorizontalAlignment="Center" IsDefault="True"/>
    </StackPanel>
</Window>
