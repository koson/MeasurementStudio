<UserControl x:Class="OxyDataVisualization.OxyDataVisualizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:local="clr-namespace:OxyDataVisualization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:OxyMainView x:Name="viewModel"/>
    </UserControl.DataContext>
    <Grid>
        <oxy:PlotView Title="{Binding Title}" Subtitle="{Binding Subtitle}">
            <!--<oxy:PlotView.Series>-->
            <oxy:PlotView.Axes>
                <oxy:LinearAxis Position="Bottom"/>
                <oxy:LinearAxis Position="Left"/>
            </oxy:PlotView.Axes>
            <!--</oxy:PlotView.Series>-->
        </oxy:PlotView>
    </Grid>
</UserControl>
