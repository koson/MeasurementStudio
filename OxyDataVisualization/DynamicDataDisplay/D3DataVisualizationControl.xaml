<UserControl x:Class="DataVisualization.DynamicDataDisplay.D3DataVisualizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:d3 ="http://research.microsoft.com/DynamicDataDisplay/1.0"
             xmlns:local="clr-namespace:DataVisualization.DynamicDataDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   
    <Grid>
        
        <d3:ChartPlotter Name="plotter">
            <d3:Header Content="{Binding Path=ChartTitle}"/>
            <d3:VerticalAxisTitle Content="{Binding Path=VerticalAxisTitle}"/>
            <d3:HorizontalAxisTitle Content="{Binding Path=HorizontalAxisTitle}"/>
        </d3:ChartPlotter>
    </Grid>
</UserControl>
