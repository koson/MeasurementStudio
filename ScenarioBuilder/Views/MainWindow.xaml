<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" 
        xmlns:localvm ="clr-namespace:ScenarioBuilder.ViewModel"
        xmlns:localv ="clr-namespace:ScenarioBuilder.Views"
        xmlns:ivexpvm="clr-namespace:IVexperiment.ViewModels;assembly=IVexperiment"
        xmlns:ivexpv ="clr-namespace:IVexperiment.Views;assembly=IVexperiment"
        xmlns:TimeDelayVM="clr-namespace:ExperimentAbstraction.HelperExecutables.TimeDelay;assembly=ExperimentAbstraction"
        mc:Ignorable="d"
        x:Class="ScenarioBuilder.MainWindow"
        Title="MainWindow" Height="350" Width="700">
   
    <Window.Resources>
        <DataTemplate DataType="{x:Type localvm:ScenarioBuilderViewModel}">
            <localv:ScenarioBuilderControl/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.DataContext>
            <localvm:ScenarioBuilderViewModel/>
        </Grid.DataContext>
    </Grid>
</Window>
